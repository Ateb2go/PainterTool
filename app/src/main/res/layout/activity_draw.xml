<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawActivity"
    android:background="@color/darkgray">

    <HorizontalScrollView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>


    <HorizontalScrollView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/pen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon01pen"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/paint"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon02paint"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/eraser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon03eraser"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/palette"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon04palette"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/spoid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon05spoid"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/undo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon06undo"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/redo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon07redo"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
            <ImageView
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon08save"
                android:layout_marginLeft="4dp"
                android:onClick="clickIcons"
                android:padding="4dp"/>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>